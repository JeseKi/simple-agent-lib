# 包含许可证和文档文件
include LICENSE
include README.md
include CONTEXT_MEMORY_GUIDE.md
include requirements.txt
include pyproject.toml

# 包含类型提示文件
include agent_lib/py.typed

# 排除测试文件和临时文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov

# 排除特定的测试和示例文件
exclude test_*.py
exclude *_test.py
exclude example_*.py
exclude demo.py
exclude temp*
exclude *.log 